# Example environment file
# Copy this to .env and fill in your actual API keys

# API Keys
OPENAI_API_KEY=sk-your-openai-key
ELEVENLABS_API_KEY=your-elevenlabs-key
LIVEKIT_API_KEY=your-livekit-key
LIVEKIT_API_SECRET=your-livekit-secret
LIVEKIT_URL=ws://localhost:7880
TOKEN_COMPANY_API_KEY=your-token-company-key

# LiveKit Agents API Keys (required for voice agent)
DEEPGRAM_API_KEY=your-deepgram-api-key
GOOGLE_API_KEY=your-google-api-key

# Database
DATABASE_URL=postgresql://localhost:5432/veritas
REDIS_URL=redis://localhost:6379

# App Configuration
ENVIRONMENT=development
LOG_LEVEL=DEBUG
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
SECRET_KEY=your-secret-key-change-in-production

# Privacy Settings
MAX_AUDIO_RETENTION_SECONDS=0
ENABLE_SLIDING_WINDOW=true
WINDOW_SIZE_SECONDS=30
