{
  "name": "veritas-overlay",
  "version": "1.0.0",
  "description": "Veritas - System-wide floating compliance copilot overlay",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev"
  },
  "keywords": ["compliance", "overlay", "electron"],
  "author": "Veritas",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.veritas.overlay",
    "productName": "Veritas Overlay",
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    }
  }
}
